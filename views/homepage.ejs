<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head.ejs') %>
    <title>Homepage</title>

<body>
  <%- include('./partials/nav') %>
    <div class=" row row-cols-4">
      <% blogs.forEach(blog=> { %>
        <div class="col card mt-3" style="width: 18rem; margin-left: 2em;">
          <img src="<%= blog.coverImageUrl %>" class="card-img-top">
          <div class="card-body">
            <h5 class="card-title">
              <%=blog.title%>
            </h5>
            <pre class="card-text text-truncate"><%=blog.body%></pre>
            <a href="/blog/view/<%=blog._id%>" class="btn btn-dark">View</a>
          </div>
        </div>
        <% }) %>
    </div>
    <%- include('./partials/script.ejs') %>
</body>

</html>